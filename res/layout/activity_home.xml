<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context=".HomeActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
     >

        <EditText
            android:id="@+id/songSearchText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="textNoSuggestions"
            android:queryHint="@string/search_name">
        </EditText>

        <Button
            android:id="@+id/justButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Just" />
         <Button
            android:id="@+id/similarButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Similar" />
    </LinearLayout>

    <ListView
        android:id="@+id/homeFixedListView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white">
    </ListView>

    <TextView
        android:id="@+id/dividerTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
   		android:paddingLeft="16dp"
        android:text="My Custom Playlists" />

    <ListView
        android:id="@+id/customPlaylistView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white">
    </ListView>

</LinearLayout>