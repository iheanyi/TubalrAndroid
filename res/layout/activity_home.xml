<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity" >

    <ListView
        android:id="@+id/homeFixedListView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/controlLayout"
        android:layout_below="@android:id/tabhost"
        android:layout_weight="1"
        android:textColor="@color/white" >
    </ListView>

    <LinearLayout
        android:id="@+id/controlLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#000" >

        <TextView
            android:id="@+id/artistNameText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="onClick"
            android:background="@drawable/selector_with_transparency"               
            android:paddingLeft="16dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="Artist Name Here"
            android:textColor="#fff" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="right" >

            <ImageButton
                android:id="@+id/homePrevButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                
                android:background="@drawable/selector_with_transparency"                
                android:padding="8dp"
                android:src="@drawable/player_first" />

            <ImageButton
                android:id="@+id/homePlayButton"
                android:layout_weight="1"                
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_with_transparency"
                android:padding="8dp"
                android:src="@drawable/player_play" />

            <ImageButton
                android:id="@+id/homePauseButton"
                android:layout_width="0dp"
               	android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_with_transparency"               
                android:src="@drawable/player_pause"
                android:padding="8dp"              
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/homeNextButton"
                android:layout_weight="1"         
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_with_transparency"
                android:padding="8dp"
                android:src="@drawable/player_last" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>